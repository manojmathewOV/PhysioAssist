{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "include": [
    "src/services/biomechanics/**/*",
    "src/services/goniometerService*.ts",
    "src/services/pose/**/*",
    "src/testing/**/*",
    "src/types/biomechanics.ts",
    "src/types/clinicalMeasurement.ts",
    "src/types/pose.ts",
    "src/types/temporalValidation.ts",
    "src/types/common.ts",
    "src/utils/vectorMath.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
